{
  "name": "ng-test",
  "version": "0.0.0",
  "scripts": {
    "--- emulators ---": "",
    "emulators:start-real": "firebase emulators:start --only firestore,auth",
    "emulators:start-demo": "firebase emulators:start --only firestore,auth --project demo-1",
    "--- start ---": "",
    "start": "ng serve",
    "start:emulator-demo": "ng serve --configuration=emulator-demo",
    "start:emulator-real": "ng serve --configuration=emulator-real",
    "start:production": "ng serve --configuration=production",
    "--- cypress ---": "",
    "cypress:emulate-demo": "cross-env FIRESTORE_EMULATOR_HOST=\"localhost:8080\" FIREBASE_AUTH_EMULATOR_HOST=\"localhost:9099\" CYPRESS_USE_DEMO_PROJECT=\"true\" GCLOUD_PROJECT=\"demo-1\" npm run cypress:open",
    "cypress:emulate-real": "cross-env FIRESTORE_EMULATOR_HOST=\"localhost:8080\" FIREBASE_AUTH_EMULATOR_HOST=\"localhost:9099\" GCLOUD_PROJECT=\"emulators-codelab-a5a89\" npm run cypress:open",
    "cypress:open": "cypress open",
    "cypress:open-real": "cross-env GOOGLE_APPLICATION_CREDENTIALS=\"serviceAccount-real.json\" npm run cypress:open",
    "cypress:run": "cypress run",    
    "ng": "ng",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test-all-emulator": "jest --runInBand --group=emulator-required",    
    "test-all-no-emulator": "jest --group=-emulator-required",     
    "lint": "ng lint",  
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "12.2.8",
    "@angular/common": "12.2.8",
    "@angular/compiler": "12.2.8",
    "@angular/core": "12.2.8",
    "@angular/fire": "7.0.4",    
    "@angular/forms": "12.2.8",
    "@angular/platform-browser": "12.2.8",
    "@angular/platform-browser-dynamic": "12.2.8",
    "@angular/router": "12.2.8",
    "firebase": "9.1.1",
    "rxfire": "6.0.2",    
    "rxjs": "6.6.7",
    "tslib": "2.3.1",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.2.8",
    "@angular-eslint/builder": "12.5.0",
    "@angular-eslint/eslint-plugin": "12.5.0",
    "@angular-eslint/eslint-plugin-template": "12.5.0",
    "@angular-eslint/schematics": "12.5.0",
    "@angular-eslint/template-parser": "12.5.0",
    "@angular/cli": "12.2.8",
    "@angular/compiler-cli": "12.2.8",
    "@types/jest": "27.0.2",
    "@types/node": "12.20.27",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "cross-env": "7.0.3",    
    "cypress": "8.5.0",
    "cypress-firebase": "2.0.0",   
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "firebase-admin": "9.12.0",
    "firebase-tools": "9.19.0",     
    "jest": "27.2.4",
    "jest-preset-angular": "10.0.1",
    "jest-runner-groups": "2.1.0",    
    "prettier": "2.4.1",
    "typescript": "4.3.5"
  }
}
